<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" 
           xsi:type="MailApp">
    <Id>123e4567-e89b-12d3-a456-426614174000</Id>
    <Version>1.0.0.3</Version>
    <ProviderName>Mykhailo Kovtun (mykhailo.kovtun@streamtele.com)</ProviderName>
    <DefaultLocale>en-US</DefaultLocale>
    <DisplayName DefaultValue="Email to PDF" />
    <Description DefaultValue="Перетворює електронний лист у PDF." />
    <IconUrl DefaultValue="https://MiKoffA.github.io/EmailToPDF/icon-80.png" />
    <SupportUrl DefaultValue="https://github.com/MiKoffA/EmailToPDF" />
    <AppDomains>
        <AppDomain>https://api.pdf.co</AppDomain>
    </AppDomains>
    <Hosts>
        <Host Name="Mailbox" />
    </Hosts>
    <Requirements>
        <Sets>
            <Set Name="Mailbox" MinVersion="1.1" />
        </Sets>
    </Requirements>
    <FormSettings>
        <Form xsi:type="ItemRead">
            <DesktopSettings>
                <SourceLocation DefaultValue="https://MiKoffA.github.io/EmailToPDF/" />
                <RequestedHeight>250</RequestedHeight>
            </DesktopSettings>
        </Form>
    </FormSettings>
    <Permissions>ReadWriteMailbox</Permissions>
    <Rule xsi:type="RuleCollection" Mode="Or">
        <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    </Rule>
    <DisableEntityHighlighting>false</DisableEntityHighlighting>
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
        <Hosts>
            <Host xsi:type="MailHost">
                <DesktopFormFactor>
                    <FunctionFile resid="functionFile" />
                    <ExtensionPoint xsi:type="MessageReadCommandSurface">
                        <OfficeTab id="TabDefault">
                            <Group id="msgReadGroup">
                                <Label resid="groupLabel" />
                                <Control xsi:type="Button" id="convertToPDFButton">
                                    <Label resid="buttonLabel" />
                                    <Supertip>
                                        <Title resid="buttonTitle" />
                                        <Description resid="buttonDesc" />
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="icon16" />
                                        <bt:Image size="32" resid="icon32" />
                                        <bt:Image size="80" resid="icon80" />
                                    </Icon>
                                    <Action xsi:type="ExecuteFunction">
                                        <FunctionName>convertToPDF</FunctionName>
                                    </Action>
                                </Control>
                            </Group>
                        </OfficeTab>
                    </ExtensionPoint>
                </DesktopFormFactor>
            </Host>
        </Hosts>
        <Resources>
            <bt:Images>
                <bt:Image id="icon16" DefaultValue="https://MiKoffA.github.io/EmailToPDF/icon-16.png" />
                <bt:Image id="icon32" DefaultValue="https://MiKoffA.github.io/EmailToPDF/icon-32.png" />
                <bt:Image id="icon80" DefaultValue="https://MiKoffA.github.io/EmailToPDF/icon-80.png" />
            </bt:Images>
            <bt:Urls>
                <bt:Url id="functionFile" DefaultValue="https://MiKoffA.github.io/EmailToPDF/function-file.js" />
            </bt:Urls>
            <bt:ShortStrings>
                <bt:String id="groupLabel" DefaultValue="PDF Tools" />
                <bt:String id="buttonLabel" DefaultValue="Convert to PDF" />
                <bt:String id="buttonTitle" DefaultValue="Convert to PDF" />
            </bt:ShortStrings>
            <bt:LongStrings>
                <bt:String id="buttonDesc" DefaultValue="Перетворює електронний лист у PDF." />
            </bt:LongStrings>
        </Resources>
    </VersionOverrides>
</OfficeApp>
